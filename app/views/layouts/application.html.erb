<!DOCTYPE html>
<html>
  <head>
    <title>Mytestapp</title>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>

    <% if user_signed_in? %>
      <%= link_to('LOGOUT ' + current_user.email, destroy_user_session_path, method: :delete) %>
    <% else %>
      <%= link_to('LOGIN', new_user_session_path) %>
    <% end %> |

    <%= link_to "INDEX", static_pages_index_path %> |
    <%= link_to "CONTACT", static_pages_contact_path %> |
    <%= link_to "ABOUT", static_pages_about_path %> |
    <%= link_to "PRODUCTS", products_path %> |
    <%= link_to "ORDERS", orders_path %> <br>
    
    <%= form_with(url: products_path, method: 'get', local: true) do |form| %>
      <%= form.label :q, 'Search for:' %>
      <%= form.text_field :q, id: 'whatever', value: params[:whatever] %>
      <%= form.submit 'Search' %>
    <% end %>

    <!-- Authorization -->
    <% if notice %>
      <p class="notice alert-info" role="alert"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-warning" role="alert"><%= alert %></p>
    <% end %>
    

   

    <%= yield %>
  </body>
</html>
