<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3" id="product_style">
	<div class = "thumbnail">
		<h1><%= link_to product.name, product %></h1>

		<%= link_to product do %>
			<%= image_tag(product.image_thumb, class: "img-responsive") %>
			<%#= image_tag(product.image_url, class: "img-responsive") %>
		<% end %>

		<p class="oneline"><%= product.description %></p>
		<p><%= product.color %></p>

		<p>
			<%= link_to 'Show', product %>
			<%= link_to 'Edit', edit_product_path(product) %>
			<%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
		</p>

	</div>
</div>